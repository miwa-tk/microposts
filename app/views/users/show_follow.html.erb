<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= @user.microposts.count %>
    </section>
  </aside>
  <div class="col-md-4">
  <h3><%= @title %> (<%= @user.following_users.count %>)</h3>
 　　<% if logged_in? %>
      <% if @users.any? %>
      <%= @users.inspect %>
        <ol class="microposts">
          <%= render @users %>
        </ol>
      <% end %>
    <% end %>
  </div>
</div>