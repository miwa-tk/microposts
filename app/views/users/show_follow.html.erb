<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
       
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= @user.microposts.count %>
    </section>
  </aside>
  <div class="col-md-8">
  <h3><%= @title %> </h3>
    <% if @title='followings' then %>
      <%= link_to 'followers',follwers_user_path %>
    <% elsif @title='followers' then %>
      <%= link_to 'followings', followings_user_path %>
    <% end %>
 　　<% if logged_in? %>
      <% if @users.any? %>
        <ol class="microposts">
          <%= render @users %>>
        </ol>
      <% end %>
    <% end %>
  </div>

</div>
