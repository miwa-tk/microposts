<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-4">

    <% if @user.following_users.any? %>
      <h3>Following (<%= @user.following_users.count %>)</h3>
      <ol class="microposts">
        <%= render @followings %>
      </ol>
    <% end %>
  </div>
  <div class="col-md-4">

    <% if @user.followers_users.any? %>
      <h3>Followers (<%= @user.follower_users.count %>)</h3>
      <ol class="microposts">
        <%= render @followers %>
      </ol>
    <% end %>
  </div>
</div>